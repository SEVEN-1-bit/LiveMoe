{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "paths": {
      "common/*": [
        "src/common/*"
      ],
      "electron-main/*": [
        "src/electron-main/*"
      ],
      "electron-web/*": [
        "src/electron-web/*"
      ],
      "@mui/styled-engine": [
        "../node_modules/@mui/styled-engine-sc"
      ]
    },
  },
  "exclude": [
    "__test__",
    "**/dist/**",
    "**/node_modules/**",
    "assets"
  ],
  "include": [
    "src/**/*",
    "plugins/**/*",
    "*.d.ts"
  ],
}
